@using BikeStore.Data.Enum
@using Category = BikeStore.Data.Enum.Category
@using Brand = BikeStore.Data.Enum.Brand
@model Product


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
